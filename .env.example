# Copy this file to .env and fill in values
# Twitch API credentials (create an app at https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# Discord webhook URL (create in your server: Server Settings -> Integrations -> Webhooks)
DISCORD_WEBHOOK_URL=

# Comma-separated Twitch logins (lowercase usernames) to monitor
STREAMERS=angryginge13

# Polling interval in seconds (default 60)
POLL_INTERVAL=60

# Optional: log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: override state file path (Docker defaults to /data/state.json)
# STATE_FILE=state.json
